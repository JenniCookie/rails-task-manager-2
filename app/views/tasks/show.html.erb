<h2><%= @task.title %></h2>
<p><%= @task.details %></p>

<% if @task.completed %>
  <i class="far fa-check-square"></i> This task is completed
<% else %>
  <i class="far fa-square"></i> This task is not completed yet
<% end %>

<%= link_to "Edit task", edit_task_path(@task) %>

<hr>
<%= link_to "Back to list", tasks_path %>
